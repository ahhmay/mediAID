<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#DDA0DD</item>
        <item name="colorPrimaryDark">#3D155F</item>
        <item name="colorAccent">#DDA0DD</item>
    </style>

    <style name="WeightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#DDA0DD</item>
        <item name="colorPrimaryDark">#3D155F</item>
        <item name="colorAccent">#DDA0DD</item>
    </style>

    <style name="MedicoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#DE9E48</item>
        <item name="colorPrimaryDark">#372C2E</item>
        <item name="colorAccent">#DE9E48</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/TextColor</item>
        <item name="android:textColorPrimary">@color/TextColor</item>
        <item name="android:windowBackground">@color/plus_btn</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
