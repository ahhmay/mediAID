<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/weight_gradient"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="82dp"
        android:layout_height="77dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="8dp"

        android:outlineAmbientShadowColor="@color/BackgroundComplimenttary"
        android:outlineSpotShadowColor="@color/BackgroundComplimenttary"
        app:srcCompat="@drawable/hospital_logo1" />

    <TextView
        android:id="@+id/nav_username"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="  Enter Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/BackgroundComplimenttary"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Enter Email Address"
        android:textColor="@color/BackgroundComplimenttary"/>

</LinearLayout>
