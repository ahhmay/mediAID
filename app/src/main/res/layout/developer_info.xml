<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/back_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blurred_effect" />
    </LinearLayout>
    <Button
        android:id="@+id/back_button"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/back_button" />
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="125dp"
        android:layout_height="122dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="21dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_amey"
        app:civ_border_color="#FFffffff"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/developer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"

        android:layout_alignEnd="@+id/profile_image"
        android:layout_marginTop="100dp"
        android:text="Amey Jeurkar"
        android:textColor="#ffffff"
        android:textSize="26dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developer_name"
        android:layout_alignEnd="@+id/developer_name"
        android:layout_marginTop="-1dp"
        android:paddingTop="3dp"
        android:text="Freelance Developer"
        android:textColor="#bdbdbd"
        android:textSize="15dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/post"
    android:layout_marginTop="0dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/whatsapp_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/post"
        android:layout_marginLeft="141dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/whatsapp_logo"
        android:padding="14dp" />

    <Button
        android:id="@+id/facebook_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/post"
        android:layout_marginTop="20dp"
        android:padding="14dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/facebook_logo" />

    <Button
        android:id="@+id/instagram_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/post"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/instagram_logo"
        android:padding="14dp" />
</LinearLayout>
</RelativeLayout>
