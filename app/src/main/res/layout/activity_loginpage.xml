<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weight_gradient">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:autofillHints="admin"
        android:hint="USERNAME"
        android:textColor="@color/plus_btn"
        android:textColorHint="@color/plus_btn"
        app:backgroundTint="@color/plus_btn"
        android:background="@drawable/background_border_dark"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        tools:ignore="HardcodedText,UnusedAttribute"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="210dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/pass"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="265dp"
        android:layout_marginRight="30dp"
        android:autofillHints="admin"
        android:background="@drawable/background_border_dark"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/plus_btn"
        android:textColorHint="@color/plus_btn"
        app:backgroundTint="@color/plus_btn"
        android:textStyle="bold"
        tools:ignore="HardcodedText,TextFields,UnusedAttribute"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="210dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:layout_below="@id/pass"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@layout/rounded_button3"
        android:onClick="onClick"
        android:text="LOGIN"
        android:textColor="@color/TextColor"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="121dp"
        android:layout_height="111dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/hospital_logo1" />

</RelativeLayout>
</ScrollView>
